{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Number of secondary schools by state over time",
    "font": "Lato",
    "anchor": "start",
    "fontSize": 17
  },
  "width": 470,
  "height": 480,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/data/Stacked_area_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "tickCount": {"interval": "year", "step": 2},
        "format": "%Y",
        "grid": false
      }
    },
    "y": {
      "field": "Number of secondary schools",
      "type": "quantitative",
      "title": "Number of Secondary Schools",
      "axis": {
        "grid": false
      }
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "title": "State",
      "scale": {
        "range": [
          "#8B4513", "#D2B48C", "#BC8F8F", "#A0522D", "#CD853F",
          "#F4A460", "#DEB887", "#DAA520", "#BDB76B", "#808000",
          "#6B8E23", "#556B2F", "#8FBC8F", "#4682B4"


        ]
      }
    },
    "opacity": {
      "condition": {
        "selection": "highlight",
        "value": 1
      },
      "value": 0.7
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Number of secondary schools", "type": "quantitative", "title": "Number of Secondary Schools"}
    ]
  },
  "selection": {
    "highlight": {
      "type": "single",
      "on": "mouseover",
      "empty": "none"
    }
  }
}
