{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1300,
  "height": 600,
  "background": "transparent",
  "projection": {
    "type": "mercator",
    "scale": 4100,
    "center": [107.6, 4.2105]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/malaysia-states.topojson",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "transform": [
    {
      "lookup": "properties.Name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/Map_data.csv"
        },
        "key": "State",
        "fields": ["Secondary school enrolment rate", "Population", "State"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "field": "Secondary school enrolment rate",
          "type": "quantitative",
          "title": "Secondary School Enrolment Rate",
          "scale": {
            "type": "threshold",
            "domain": [50, 60, 70, 80, 90, 100],
            "range": ["#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6", "#3182bd"]
          },
          "legend": {
            "titleAlign": "center",
            "titleAnchor": "middle",
            "titleFontSize": 15,
            "labelFontSize": 13,
            "symbolStrokeWidth": 10,
            "symbolType": "square",
            "direction": "horizontal",
            "orient": "bottom-right"
          }
        },
        "tooltip": [
          {"field": "properties.Name", "type": "nominal", "title": "State"},
          {"field": "Secondary school enrolment rate", "type": "quantitative", "title": "Secondary School Enrolment Rate", "format": ","},
          {"field": "Population", "type": "quantitative", "title": "Population", "format": ","}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/Map_data.csv"
      },
      
      "mark": "rule",
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "longitude2": {"field": "Longitude2", "type": "quantitative"},
        "latitude2": {"field": "Latitude2", "type": "quantitative"},
        "strokeWidth": {"value": 2},
        "stroke": {"value": "black"}
      }
    }
  ]
}
