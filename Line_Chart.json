{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Trends in Education Expenditure, Poverty Rate, and Unemployment Rate",
    "font": "Lato",
    "anchor": "start",
    "fontSize": 17
  },
  "width": 520,
  "height": 470,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/data/Line_Chart_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "fold": ["Education expenditure", "Poverty rate", "Unemployment rate"],
      "as": ["Category", "Value"]
    }
  ],
  "mark": {
    "type": "line",
    "interpolate": "monotone"
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "tickCount": {"interval": "year", "step": 2},
        "format": "%Y",
        "grid": false
      }
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Value",
      "axis": {
        "grid": false
      }
    },
    "color": {
      "field": "Category",
      "type": "nominal",
      "scale": {
        "domain": ["Education expenditure", "Poverty rate", "Unemployment rate"],
        "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
      },
      "title": "Category",
      "legend": {
        "orient": "top-left"
      }
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "Category", "type": "nominal", "title": "Category"},
      {"field": "Value", "type": "quantitative", "title": "Value"}
    ]
  }
}
