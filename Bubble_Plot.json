{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
  "text": "Does secondary school enrolment affect mean household income?",
  "font": "Lato",
  "anchor": "start",
  "fontSize": 17
  },
  "width": 470,
  "height": 440,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/data/Bubble_Plot_data.csv"
  },
  "transform": [
    {"filter": "datum['Enrolment'] != null"},
    {"filter": "datum['Mean Income'] != null"},
    {"filter": "datum['Population'] != null"}
  ],
  "params": [
    {
      "name": "QuartileSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "Quartile 1", "Middle Income", "Quartile 3"],
        "labels": ["All", "Quartile 1", "Middle Income", "Quartile 3"],
        "name": "Select Income Quartile: "
      }
    }
  ],
  "transform": [
    {"filter": "datum['Enrolment'] != null"},
    {"filter": "datum['Mean Income'] != null"},
    {"filter": "datum['Population'] != null"},
    {
      "filter": "QuartileSelection == 'All' || datum['Quartile'] == QuartileSelection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Enrolment",
      "type": "quantitative",
      "title": "Secondary school enrolment rate",
      "axis": {
        "labelAngle": -45,
        "tickCount": 7
      },
      "scale": {
        "type": "linear",
        "domain": [80, 105]
      }
    },
    "y": {
      "field": "Mean Income",
      "type": "quantitative",
      "title": "Mean Income",
      "axis": {
        "tickCount": 6
      },
      "scale": {
        "type": "linear",
        "domain": [4000, 13000]
      }
    },
    "color": {
      "field": "Quartile",
      "type": "nominal",
      "title": "Quartile",
      "scale": {
        "domain": ["Quartile 1", "Middle Income", "Quartile 3"],
        "range": ["#FF8C00", "#1E90FF", "#B22222"]
      }
    },
    "opacity": {
      "condition": {
        "selection": "hover",
        "value": 0.7
      },
      "value": 0.2
    }
  },
  "layer": [
    {
      "selection": {
        "grid": {
          "type": "interval",
          "bind": "scales"
        },
        "hover": {
          "type": "single",
          "on": "mouseover",
          "clear": "mouseout",
          
          "empty": "all"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "title": "Population"
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Enrolment", "type": "quantitative", "title": "Enrolment", "format": ","},
          {"field": "Mean Income", "type": "quantitative", "title": "Mean Income", "format": ","},
          {"field": "Population", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "Quartile", "type": "nominal", "title": "Quartile"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "State", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'Perlis' || datum['State'] == 'Kuala Lumpur' || datum['State'] == 'Selangor' || datum['State'] == 'Terengganu' || datum['State'] == 'Kelantan' || datum['State'] == 'Sabah' || datum['State'] == 'Sarawak' || datum['State'] == 'Pahang'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
