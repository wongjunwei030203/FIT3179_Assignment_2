{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
  "text": "What is the impact of income on the crime index?",
  "font": "Lato",
  "anchor": "start",
  "fontSize": 17
  },
  "width": 470,
  "height": 440,
  "background": "transparent",
  "data": {
    "url": "https://raw.githubusercontent.com/wongjunwei030203/FIT3179_Assignment_2/main/data/Bubble_Plot_data.csv"
  },
  "transform": [
    {"filter": "datum['Crime Index'] != null"},
    {"filter": "datum['Mean Income'] != null"},
    {"filter": "datum['Population'] != null"}
  ],
  "params": [
    {
      "name": "RegionSelection",
      "value": "All",
      "bind": {
        "input": "select",
        "options": ["All", "East Malaysia", "West Malaysia"],
        "labels": ["All", "East Malaysia", "West Malaysia"],
        "name": "Select Region: "
      }
    }
  ],
  "transform": [
    {"filter": "datum['Crime Index'] != null"},
    {"filter": "datum['Mean Income'] != null"},
    {"filter": "datum['Population'] != null"},
    {
      "filter": "RegionSelection == 'All' || datum['Region'] == RegionSelection"
    }
  ],
  "encoding": {
    "x": {
      "field": "Crime Index",
      "type": "quantitative",
      "title": "Crime Index",
      "axis": {
        "labelAngle": 0,
        "tickCount": 7
      },
      "scale": {
        "type": "linear",
        "domain": [400, 20000]
      }
    },
    "y": {
      "field": "Mean Income",
      "type": "quantitative",
      "title": "Mean Income",
      "axis": {
        "tickCount": 6
      },
      "scale": {
        "type": "linear",
        "domain": [4000, 13000]
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "scale": {
        "domain": ["East Malaysia", "West Malaysia"],
        "range": ["#8B4513", "#4682B4"] 
      }
    },
    "opacity": {
      "condition": {
        "selection": "hover",
        "value": 0.7
      },
      "value": 0.2
    }
  },
  "layer": [
    {
      "selection": {
        "grid": {
          "type": "interval",
          "bind": "scales"
        },
        "hover": {
          "type": "single",
          "on": "mouseover",
          "clear": "mouseout",
          "empty": "all"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "GDP",
          "type": "quantitative",
          "title": "GDP"
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Crime Index", "type": "quantitative", "title": "Crime Index", "format": ","},
          {"field": "Mean Income", "type": "quantitative", "title": "Mean Income", "format": ","},
          {"field": "GDP", "type": "quantitative", "title": "GDP", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "State", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['State'] == 'Selangor' || datum['State'] == 'Kuala Lumpur' || datum['State'] == 'Johor' || datum['State'] == 'Perlis' || datum['State'] == 'Kelantan' || datum['State'] == 'Sarawak' || datum['State'] == 'Melaka' || datum['State'] == 'Pulau Pinang'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Crime Index", "type": "quantitative", "title": "Crime Index", "format": ","},
          {"field": "Mean Income", "type": "quantitative", "title": "Mean Income", "format": ","},
          {"field": "GDP", "type": "quantitative", "title": "GDP", "format": ","}
        ]
      }
    }
  ]
}
